# BrewTracker Backend Environment Variables
# Copy this to .env and fill in your actual values

# === Core Application Secrets ===
# Flask application secret key
SECRET_KEY="your_flask_secret_key_here"

# JWT secret key for authentication tokens
JWT_SECRET_KEY="your_jwt_secret_key_here"

# Password reset token secret (optional - falls back to JWT_SECRET_KEY)
# Recommended: Use a different secret for password reset tokens for enhanced security
PASSWORD_RESET_SECRET="your_password_reset_secret_here"

# === Database Configuration ===
# MongoDB connection URI
MONGO_URI="mongodb://localhost:27017/brewtracker"

# Test database URI (for running tests)
TEST_MONGO_URI="mongodb://localhost:27017/brewtracker_test"

# === Flask Configuration ===
FLASK_ENV="development"
FLASK_DEBUG=True

# === Google OAuth Configuration ===
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# === Email Configuration ===
# SMTP settings for sending verification and reset emails
SMTP_EMAIL="your-email@example.com"
SMTP_PASSWORD="your-email-password"

# === Frontend URL ===
# URL of your frontend application (for email links)
FRONTEND_URL="http://localhost:3000"

# === Production Settings ===
# Set to 'production' for production deployments
# FLASK_ENV="production"
# FLASK_DEBUG=False

# === Security Notes ===
# - Use strong, unique secrets for production
# - Keep this file out of version control
# - Consider using different secrets for JWT and password reset tokens
# - Rotate secrets regularly in production