# BrewTracker Backend Environment Variables
# Copy this to .env and fill in your actual values

# === Core Application Secrets ===
# Flask application secret key
SECRET_KEY="your_flask_secret_key_here"

# JWT secret key for authentication tokens
JWT_SECRET_KEY="your_jwt_secret_key_here"

# Password reset token secret (optional - falls back to JWT_SECRET_KEY)
# Recommended: Use a different secret for password reset tokens for enhanced security
PASSWORD_RESET_SECRET="your_password_reset_secret_here"

# === Database Configuration ===
# MongoDB connection URI
MONGO_URI="mongodb://localhost:27017/brewtracker"

# Test database URI (for running tests)
TEST_MONGO_URI="mongodb://localhost:27017/brewtracker_test"

# === Flask Configuration ===
FLASK_ENV="development"
FLASK_DEBUG=True

# === Google OAuth Configuration ===
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# === Email Configuration ===
# SMTP settings for sending verification and reset emails
SMTP_EMAIL="your-email@example.com"
SMTP_PASSWORD="your-email-password"

# === Frontend URL ===
# URL of your frontend application (for email links)
FRONTEND_URL="http://localhost:3000"

# === Security Configuration ===
# Security monitoring thresholds (optional - defaults will be used if not set)
SECURITY_FAILED_LOGIN_THRESHOLD="10"        # Number of failed logins before blocking (per window)
SECURITY_FAILED_LOGIN_WINDOW="1800"         # Time window in seconds (30 minutes)
SECURITY_SUSPICIOUS_REQUEST_THRESHOLD="25"  # Number of suspicious requests before blocking
SECURITY_SUSPICIOUS_REQUEST_WINDOW="600"    # Time window in seconds (10 minutes)

# IP addresses that bypass security checks (comma-separated)
SECURITY_IP_ALLOWLIST="127.0.0.1,::1"

# === MongoDB TLS/SSL Configuration ===
# For secure MongoDB connections (optional)
# MONGO_TLS_CA_FILE="/path/to/ca.pem"
# MONGO_TLS_CERT_FILE="/path/to/client.pem"  
# MONGO_TLS_KEY_FILE="/path/to/client-key.pem"

# Legacy SSL options (alternative to TLS options above)
# MONGO_SSL_CA_CERTS="/path/to/ca.pem"
# MONGO_SSL_CERTFILE="/path/to/client.pem"
# MONGO_SSL_KEYFILE="/path/to/client-key.pem"

# === Production Settings ===
# Set to 'production' for production deployments
# FLASK_ENV="production"
# FLASK_DEBUG=False

# === Security Notes ===
# - Use strong, unique secrets for production (minimum 32 characters)
# - Keep this file out of version control
# - Consider using different secrets for JWT and password reset tokens
# - Rotate secrets regularly in production
# - TLS certificates should be mounted as volumes in containerized deployments